#--------------------------------
#   CONFIGURE MATLAB
#--------------------------------

export MATLAB_ROOT_PATH=/Applications/MATLAB_R2024b.app # matlabroot
# export MATLAB_EXEC_PATH=/Applications/MATLAB_R2024b.app/bin/matlab # executable, used by (unofficial) matlab vscode extension
export MATLAB_STARTUP_PATH=$HOME/Documents/MATLAB # for code runner -sd $MATLAB_STARTUP_PATH option

